    <script>
      function debounce<F extends (...args: any[]) => any>(func: F, wait: number): F {
        let timeout: ReturnType<typeof setTimeout> | null = null;
        return function(this: any, ...args: any[]) {
          const context = this;
          if (timeout) {
            clearTimeout(timeout);
          }
          timeout = setTimeout(() => func.apply(context, args), wait);
          return timeout;
        } as F;
      }

      function closeDropdown(): void {
        const element = document.getElementById("dropdown");
        element?.classList.remove("block");
        element?.classList.add("hidden");
      }

      function openDropdown(): void {
        const element = document.getElementById("dropdown");
        element?.classList.remove("hidden");
        element?.classList.add("block", "absolute", "right-4", "top-[70px]");
      }

      function toggleDropdown(): void {
        const element = document.getElementById("dropdown");
        if (element?.classList.contains("hidden")) {
          openDropdown();
          return;
        }
        closeDropdown();
      }

      // Debounce the closeDropdown function with a delay of 200ms
      const debouncedCloseDropdown = debounce(closeDropdown, 200);

      window.addEventListener("resize", debouncedCloseDropdown);

      const dropdownButton = document.getElementById("dropdownDefaultButton");
      dropdownButton?.addEventListener("click", toggleDropdown);
      dropdownButton?.addEventListener("blur", closeDropdown);

      const dropdown = document.getElementById("dropdown");
      dropdown?.addEventListener("mousedown", (event: MouseEvent) => {
        event.preventDefault();
      });
    </script>
