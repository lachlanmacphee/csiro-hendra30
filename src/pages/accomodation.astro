---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4">Accomodation Partners</h1>
    <div
      class="max-w-4xl mx-auto py-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8"
    >
      <div class="bg-white rounded-lg shadow-md flex flex-col">
        <div class="h-48 overflow-hidden">
          <img
            src="hotel-novotel.jpg"
            alt="Novotel Exterior"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="flex-grow p-4">
          <h2 class="text-xl font-bold mb-2">Novotel</h2>
          <p class="mb-2">
            20% discount for conference members using code HENDRA
          </p>
          <a
            target="_blank"
            href="booking-link-hotelA"
            class="mt-auto block w-28 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Book Now</a
          >
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md flex flex-col">
        <div class="h-48 overflow-hidden">
          <img
            src="apartments-vue.jpg"
            alt="Vue Apartments Exterior"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="flex-grow p-4">
          <h2 class="text-xl font-bold mb-2">Vue Apartments</h2>
          <p class="mb-2">
            20% discount for conference members using code HENDRA
          </p>
          <a
            target="_blank"
            href="https://book-directonline.com/vueapartmentsgeelong/properties/vueapartdirect?locale=en&checkInDate=2024-12-08&checkOutDate=2024-12-12&promocode=HENDRA"
            class="mt-auto block w-28 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Book Now</a
          >
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md flex flex-col">
        <div class="h-48 overflow-hidden">
          <img
            src="hotel-r.jpg"
            alt="R Hotel Exterior"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="flex-grow p-4">
          <h2 class="text-xl font-bold mb-2">R Hotel</h2>
          <p class="mb-2">
            20% discount for conference members using code HENDRA
          </p>
          <a
            target="_blank"
            href="https://book-directonline.com/rhotelgeelong/properties/rhotelgeelong?locale=en&checkInDate=2024-12-08&checkOutDate=2024-12-12&promocode=HENDRA"
            class="mt-auto block w-28 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Book Now</a
          >
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md flex flex-col">
        <div class="h-48 overflow-hidden">
          <img
            src="hotel-holiday-inn.avif"
            alt="R Hotel Exterior"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="flex-grow p-4">
          <h2 class="text-xl font-bold mb-2">Holiday Inn</h2>
          <p class="mb-2">Use the button below to get discounted rates</p>
          <a
            target="_blank"
            href="https://www.holidayinn.com/redirect?path=hd&brandCode=HI&localeCode=en&regionCode=925&hotelCode=GEXGL&_PMID=99801505&GPC=CS1&cn=no&viewfullsite=true"
            class="mt-auto block w-28 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >Book Now</a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>
