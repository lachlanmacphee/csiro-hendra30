---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex justify-center mx-auto px-4 py-8">
    <div class="w-full max-w-3xl">
      <form>
        <h1 class="text-3xl font-bold mb-6">Submit an Abstract</h1>
        <div class="mb-4">
          <label for="title" class="block mb-2">Title</label>
          <input
            type="text"
            id="title"
            required
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>

        <div class="mb-4">
          <label class="block mb-2">Type</label>
          <div class="flex items-center">
            <input
              type="radio"
              name="type"
              id="talk"
              value="talk"
              required
              checked
              class="mr-2"
            />
            <label for="talk" class="mr-4">Talk</label>
            <input
              type="radio"
              id="poster"
              value="poster"
              name="type"
              required
              class="mr-2"
            />
            <label for="poster">Poster</label>
          </div>
        </div>

        <div class="mb-4">
          <label for="abstract" class="block mb-2">Abstract (200 words)</label>
          <textarea
            id="abstract"
            required
            rows="4"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"
          ></textarea>
        </div>

        <div class="mb-4">
          <input
            type="submit"
            value="Register"
            class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md cursor-pointer"
          />
        </div>
      </form>
    </div>
  </div>
</Layout>
